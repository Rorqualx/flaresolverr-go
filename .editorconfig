# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Go files - use tabs per Go standard
[*.go]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefile - requires tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 4
